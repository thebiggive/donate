{
  "angularCompilerOptions": {
    "extendedDiagnostics": {
      "defaultCategory": "warning"
    },
    "fullTemplateTypeCheck": true,
    "strictTemplates": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "paths": { 
      "@angular/*": [ "./node_modules/@angular/*" ],
      "@biggive/components": ["components-library"],
      "@biggive/components/loader": ["components-library/loader/index.cjs.js"],
      "@biggive/components-react": ["components-library/src/lib/stencil-generated/components.ts"],
      "@biggive/components/dist/components":["./components-library/dist/components/index.js"]
    },
    "importHelpers": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "target": "ES2022",
    "types": [],
    "useDefineForClassFields": false
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
